# SSH defaults for probe nodes
CNF_SSH_USER=ubuntu
CNF_SSH_KEY=~/.ssh/id_rsa
CNF_SSH_TIMEOUT=10

# Provider metadata (optional)
AWS_DEFAULT_REGION=us-east-1
AZURE_SUBSCRIPTION_ID=
GCP_PROJECT_ID=

# OCI testing (public or pre-signed test objects)
# Based on Oracle Object Storage network analysis
OCI_ASHBURN_ENDPOINT=https://objectstorage.us-ashburn-1.oraclecloud.com
OCI_PHOENIX_ENDPOINT=https://objectstorage.us-phoenix-1.oraclecloud.com
OCI_SANJOSE_ENDPOINT=https://objectstorage.us-sanjose-1.oraclecloud.com

# Test object URL (replace with your public or pre-signed URL)
OCI_TEST_PUBLIC_OBJECT=https://objectstorage.us-phoenix-1.oraclecloud.com/n/<namespace>/b/<bucket>/o/<object>

# Monitoring thresholds (milliseconds)
LATENCY_WARN_THRESHOLD=150
LATENCY_CRITICAL_THRESHOLD=200

# Test concurrency
MAX_CONCURRENT_TESTS=10
